{
  "manifest_version": 3,
  "name": "Host Permissions mv3",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icon.svg"
  },
  "action": {
    "default_title": "Host Permissions mv3",
    "default_icon": "icon.svg"
  },

  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://example.com/*",
    "*://*.google.com/*"
  ],
  "optional_permissions": [
    "history"
  ]
}
